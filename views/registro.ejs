<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Registro</title>
  <link rel='stylesheet' href='/stylesheets/login.css' />
</head>

<body>
  <div id="loginForm">
    <form action="/autenticar" method="POST">
      <input type="email" name="email" id="email" class="wide-font set-width" placeholder="_email" required>
      <br>
      <input type="text" name="user_name" id="user_name" placeholder="_nome" maxlength="40" class="wide-font set-width"
        required>
      <br>
      <input type="password" name="password" id="password" class="wide-font set-width" minlength="6"
        placeholder="_senha" required>
      <br>
      <input type="password" id="checkPassword" class="wide-font set-width" minlength="6" placeholder="_repita a senha"
        required>
      <br>
      <button type="submit">
        <h2>registrar</h2>
      </button>
    </form>
  </div>
  <script>
    // Verifica as senhas
    const button = document.querySelector('button');
    const password = document.querySelector('#password')
    const checkPassword = document.querySelector('#checkPassword')

    button.addEventListener('click', ev => {
      if (password.value != checkPassword.value) {
        ev.preventDefault();
        alert('Senhas n√£o batem')
      }
    })
  </script>
</body>

</html>